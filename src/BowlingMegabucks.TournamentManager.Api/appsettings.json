{
  "ConnectionStrings": {
    "TournamentManager": ""
  },

  "Database": {
    "MariaDbVersion": "11.4.7"
  },

  "QueryPerformance": {
    "SlowQueryThresholdMilliseconds": 250
  },
  
  "Serilog": {
    "MinimumLevel": {
        "Default": "Information",
        "Override": {
            "Microsoft": "Warning"
        }
    }
  },

  "AllowedHosts": "*",

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Tournament Manager API",
        "Uri": "/health"
      }
    ],
    "MaximumHistoryEntriesPerEndpoint": 250,
    "EvaluationTimeInSeconds": 60,
    "ApiMaxActiveRequests": 1,
    "HeaderText": "Tournament Manager Health Dashboard",
    "MinimumSecondsBetweenFailureNotifications": 300
  }
}
